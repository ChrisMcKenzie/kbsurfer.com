extends layout

block content
  - if (post.image)
    .post-image
      img(src=post.image)
  - else if(post.header)
    .post-header
      != post.header
  - else if(post.video)
    .post-video
      != post.video
  section
    h4.title
      a(href=post.url)
      = post.title
      small
        a(href=categoryUrl(post.category))
          = post.category
    span.date #{moment(post.date).format("MMM D")}

    div(class="hashtags")
      each tag in post.tags
        a(href="#{tagUrl(tag)}", class="hashtag") #{tag}

    div.content
      != post.content

    div(id="disqus_thread")
    script(type="text/javascript").
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'kbsurfer'; // required: replace example with your forum shortname
        var disqus_title = '#{post.title}';
        var disqus_url = 'http://kbsurfer.com/#{post.url}';

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    noscript Please enable JavaScript to view the
      a(href="http://disqus.com/?ref_noscript") comments powered by Disqus.
    a(href="http://disqus.com", class="dsq-brlink highlight") comments powered by
      span(class="logo-disqus")  Disqus

